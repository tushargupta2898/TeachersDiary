<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
android:layout_width="match_parent"
android:background="@color/colorAccent"
android:elevation="4dp"
xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.attendance.ui.activities.LetterImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivDayDetails"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSubjectDayDetails"
        android:text="Subjects"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/ivDayDetails"
        android:layout_alignTop="@+id/ivDayDetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvTimeDayDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivDayDetails"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="Time"
        android:textStyle="bold"
        android:layout_below="@+id/tvSubjectDayDetails"
        android:textColor="@color/black"/>

</RelativeLayout>

</android.support.v7.widget.CardView>